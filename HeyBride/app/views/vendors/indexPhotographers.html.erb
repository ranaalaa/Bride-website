<h1 align="center"><center><font font size="8"><B><i>  Photographer </i></B></font></center></h1><br>
<link href="css/vendors.css" rel="stylesheet">
<div id="nav">
  <%= search_form_for @q, url: indexPhotographers_vendors_path do |f| %>
    <%= f.label :name %><br>
    <%= f.search_field :name_cont , :placeholder => "name" %><br> 
    <%= f.label :location %><br>
    <%= f.text_field :location_cont , :placeholder => "location" %>  <br> 
    <%= f.label "Price Range" %> <br>
    <%= f.label :packages_price_gteq, 'From' %>
    <%= f.text_field :packages_price_gteq , size: "3x3", :placeholder => "min"%>
    <%= f.label :packages_price_lteq, 'To' %>
    <%= f.text_field :packages_price_lteq , size: "3x3", :placeholder => "max" %>
    <p>
      <%= f.label "Sort By" %> <br>
      <%= sort_link(@q, :packages_price) %>
    </p>
    <%=  f.submit "search" %>
  <% end %>
  <% if @vendors.size.zero? %>
    <p id="notice"><%= notice %> 
    </p> 
  <% end %> 
</div>
<div id="section">
  <h4 class="column"> &nbsp;&nbsp;&nbsp;</h4>
  <% @vendors.in_groups_of(3, false) do |vendors| %>
    <div class="row">
      <% vendors.each do |vendor| %>
        <div class="col-md-3">
          <%= image_tag vendor.image.url(:small), :size => "200x200" %>  <br> 
          <%= link_to vendor.name, vendor %><br>
          <% if user_signed_in? %>
            <% if current_user.admin? %>
              <%= link_to 'Edit', edit_vendor_path(vendor) %>
              <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %><br>
            <% end %>
          <%end%>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
