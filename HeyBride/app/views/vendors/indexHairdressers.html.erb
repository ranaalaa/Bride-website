
<%= form_tag url_for(:controller => 'vendors', :action => 'indexHairdressers'), :method => 'get' do %>  <%= text_field_tag :search, params[:search], placeholder: "Search Hairessers" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>

<% @vendors.each do |vendor| %>
 <%= image_tag vendor.image.url(:small),{} %></br>
    <%= link_to vendor.name, vendor %><br>
    


<% if user_signed_in? %>
<% if current_user.admin? %>
<%= link_to 'Edit', edit_vendor_path(vendor) %> 
<%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %><br>
<% end %>
 <% end %>
     <%end%>

