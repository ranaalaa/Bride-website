  <%= form_tag url_for(:controller => 'vendors', :action => 'indexSpa'), :method => 'get' do %>  <%= text_field_tag :search, params[:search], placeholder: "Search Spa&beauty centers " %>
    <%= submit_tag "Search", :name => nil %>
  <% end %>

  <h4 class="column">Spas & Beauty Centers</h4>
  <% @vendors.in_groups_of(3, false) do |vendors| %>
    <div class="row">
      <% vendors.each do |vendor| %>
        <div class="col-md-3">
          <%= image_tag vendor.image.url(:small),{} %><br>
          <%= link_to vendor.name, vendor %>-<%= link_to vendor.location, vendor %><br>
          <% if user_signed_in? %> 
            <% if current_user.admin? %>
              <%= link_to 'Edit', edit_vendor_path(vendor) %> 
              <%= link_to 'Destroy', vendor, method: :delete, data: { confirm: 'Are you sure?' } %><br>
            <% end %>
          <%end%>
        </div>
      <% end %>
    </div>
  <% end %>
