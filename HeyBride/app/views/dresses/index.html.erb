<h1>Hey Bride!</h1>

 <body>
 
  <%= form_tag(dresses_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search " %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn"   type="submit" ><i class="icon-search"  > Search </i></button>
      <% end %>
      <% yield %>
    </div>

</body>

<table>
  <thead>
      <th colspan="3"></th>
  
  </thead>

  <tbody>
    <% @dresses.each do |dress| %>
      
        <%= image_tag dress.image.url %> <br>
        <%= link_to  dress.name, dress %> <br>
    
      
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
<% if current_user.admin? %>



<%= link_to 'New Store', new_dress_path %>
  <% end %>
    <% end %>