<!DOCTYPE html>



<html>

<head>

  <title>Bridewebsite</title>

  <title>HeyBride</title>
 
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>

</head>
<body>
 
  <%= form_tag(djs_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search " %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn"   type="submit" ><i class="icon-search"  > Search </i></button>
    </div>


 
<div id= "user_nav">


	<% if user_signed_in? %>
	Signed in as <%= current_user.email %>. Not You?
	<%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
	<% end %>
</div>

  <% end %>


  <% end %>
<%= yield %>

</body>
</html>
