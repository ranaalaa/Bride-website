<!DOCTYPE html>
<html>
<head>
  <title>Bridewebsite</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <link href='css/fontfamily.css' rel='stylesheet'>
      <link href="css/vendors.css" rel="stylesheet">
      <link rel="stylesheet" href="css/bootstrap.min.css">
      <link rel="stylesheet" href="css/bootstrap-theme.min.css">
      <meta charset="utf-8">
</head>
<body>
  <% if user_signed_in? %>
    <div class="header">
      <div class="container0">
        <div class="nav-top">
          <div class="row">
            <div class="col-md-4">
              <a href="#" class="logo-icon">
                <%= link_to image_tag("logo-1.png", :border => 0, :height => 50), {:action => 'HomePage', :controller => 'welcome'} %>
              </a>
            </div>
            <div class="col-md-4 ">
              <%= form_tag(vendors_path, :method => "get", class: "navbar-form", id: "search-form") do %>
