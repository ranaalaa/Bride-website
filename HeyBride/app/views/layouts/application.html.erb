                </ul>
              </li>
              
              
              <% if user_signed_in? %>
                <% if current_user.admin? %>
                  <%= link_to 'New', new_vendor_path %></br>
                <%end%>
              <%end%>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>
<%= yield %>
</body>
</html>
