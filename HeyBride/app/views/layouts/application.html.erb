                <%= image_submit_tag("search1.png",:id=> "submit")%><br>
              <% end %>
            </div>
            <div class="col-md-4">
              <ul class="nav-out">
                <li> <%= link_to "Sign out", destroy_user_session_path, :method => :delete %>
