<link href="css/signup.css" rel="stylesheet">
<a href="#" class="logo-icon">
<img src="/assets/logo-1.png" border="0"  style="height: 80px;"  >
</a>
<body background="/assets/background02.png">
<h2>Create your new account</h2>
<div class="container">
  <div class="omb_login">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>
        <div class="row omb_row-sm-offset-3">
			    <div class="col-xs-12 col-sm-6">	
			      <form class="omb_loginForm" action="" autocomplete="off" method="POST">
				      <div class="field">
                <%= f.email_field :email, autofocus: true , :placeholder=>"email address"  %>
              </div>
              <span class="help-block"></span>
              <div class="field">
                <%= f.text_field :username, autofocus: true , :placeholder=>"user name",:required => true%>
              </div>
              <span class="help-block"></span>
              <div class="field">
                <%= f.text_field :phone, autofocus: true , :placeholder=>"phone(optional)"%>
              </div>
              <span class="help-block"></span>
              <div class="field">
                <%= f.radio_button :female, '1', { :checked => true } %> <%= f.label :is_female, "Female" %>
                <%= f.radio_button :female, '0' %> <%= f.label :is_female, "Male" %>
              </div>
              <div class="field">
                <% if @validatable %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "off" , :placeholder=>"password"%>
              </div>
  		        <span class="help-block"></span>
              <div class="field">
                <%= f.password_field :password_confirmation, autocomplete: "off" , :placeholder=>"password confirmation" %>
              </div>
              </br>
              <div class="actions">
                <%= image_submit_tag("button.png") %><br>
             </div>
    <% end %>
    <%= render "devise/shared/links" %>
            </form>
          </div>
        </div>
  </div>
</div>