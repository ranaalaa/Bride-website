<h1>Hey Bride!</h1>
 <body>
 
  <%= form_tag(suits_path, :method => "get", class: "navbar-form", id: "search-form") do %>
    <div class="input-append">
      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search " %>
      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
           of using a Rails form helper -->
      <button class="btn"   type="submit" ><i class="icon-search"  > Search </i></button>
      <% end %>
      <% yield %>
    </div>

</body>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @suit.each do |suit| %>
    
        <%= image_tag suit.photo.url %> <br>
    <h1 class="suit-name"><%= link_to suit.name, suit %></h1>

    
    
    
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<% if current_user.admin? %>
<%= link_to 'New Store', new_suit_path %>
 <% end %>
  <% end %>
  