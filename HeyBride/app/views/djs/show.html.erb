
<p id="notice"><%= notice %></p>

<%= image_tag @suit.photo.url %>

<p>
  <strong>Name:</strong>
  <%= @dj.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @dj.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @dj.phone %>
</p>

<p>
  <strong>Email:</strong>
  <%= @dj.email %>
</p>
<h2> Packages </h2>
<% @dj.dpackages.each do |dpackage| %>
  <p>
    <strong>Name:</strong>
    <%= dpackage.name %>
  </p>
 
  <p>
    <strong>Description</strong>
    <%= dpackage.description %>
  </p>
   <p>
    <strong>Price</strong>
    <%= dpackage.price %>
  </p>
<% end %>

<h2>Add a package:</h2>
<%= form_for([@dj, @dj.dpackages.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
    <p>
    <%= f.label :price %><br>
    <%= f.text_area :price %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>


<%= link_to 'Edit', edit_dj_path(@dj) %> |
<%= link_to 'Back', djs_path %>
